# root indicates that this is the top-level EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.ts]
# Ensure TypeScript files follow 2-space indentation
indent_size = 2

[*.tsx]
indent_size = 2

[*.json]
indent_size = 2

[*.md]
# Keep markdown files readable, donâ€™t trim trailing whitespace (needed for line breaks)
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[Makefile]
indent_style = tab